# DB credentials (used for both direct and SSH tunnel connections).
DB_HOST=localhost
DB_PORT=3306
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Business pricing (cents). Required for allocation.
BOX_PRICE_SMALL=0
BOX_PRICE_MEDIUM=0
BOX_PRICE_LARGE=0
BOX_TARGET_PCT=115
CCI_BASE_PERCENT=0.05
CCI_GIVING_MULTIPLIER=1.35

